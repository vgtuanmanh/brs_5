<% provide(:title, "Add user") %>
<h1>Add new user</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for([:admin, @user]) do |u| %>
      <%= render "shared/error_messages", obj: u.object %>

      <%= u.label :name %>
      <%= u.text_field :name, class: "form-control" %>

      <%= u.label :email %>
      <%= u.email_field :email, class: "form-control" %>

      <%= u.label :password %> 
      <%= u.password_field :password, class: "form-control" %>

      <%= u.label :password_confirmation, "Retype Password" %>
      <%= u.password_field :password_confirmation, class: "form-control" %>

      <%= u.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>