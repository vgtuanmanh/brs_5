<% provide(:title, @user.name) %>
<div class="row">
  <h1>
    <%= image_tag(@user.avatar.url(:thumb)) %>
    <%= @user.name %>
  </h1>
</div>
<br>
<div>
  <h3>
    User name: <strong><%= @user.name %></strong>
    <br>
    Gender:
    <strong>
      <% if @user.is_female %>
        Female
      <% else %>
        Male
      <% end %>
    </strong>
    <br>
    Date of birth:
    <strong>
      <% unless @user.date_of_birth.nil? %>
        <%= @user.date_of_birth.strftime('%d/%m/%Y') %>
      <% else %>
        Not updated yet!
      <% end %>
    </strong>
    <br>
    User email: <strong><%= @user.email %></strong>
  </h3>
</div>
<br>
<div>
  <%= link_to "Back", admin_users_path(@user), class: "btn btn-primary" %>
  <%= link_to "Edit Profile", edit_admin_user_path(@user),
                              class: "btn btn-default" %>
  <%= link_to "All reviews", "#",
                            class: "btn btn-default" %>
  <%= link_to "Place requests", "#",
                            class: "btn btn-default" %>
  <%= link_to "Delete", admin_user_path(@user), class: "btn btn-danger",
      method: :delete, data: {confirm: "ARE YOU SURE?"} %>
</div>