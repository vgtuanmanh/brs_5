<% provide(:title, "Edit user") %>
<h1>Edit User Profile</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for([:admin, @user], html: {multipart: true}) do |u| %>
      <%= render "shared/error_messages", obj: u.object %>

      <%= u.label :avatar %>
      <%= u.file_field :avatar %>

      <%= u.label :name %>
      <%= u.text_field :name, class: "form-control" %>

      <%= u.label :is_female, "Check if this user is female" %>
      <%= u.check_box :is_female, {}, true %>

      <%= u.label :date_of_birth %><br />
      <%= u.date_select :date_of_birth, start_year: 2010, end_year:1965 %>

      <%= u.label :email %>
      <%= u.email_field :email, class: "form-control" %>

      <%= u.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>